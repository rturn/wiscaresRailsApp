<p id="notice"><%= notice %></p>

<h1>Listing Pet Infos</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Name</th>
      <th>Species</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pet_infos.each do |pet_info| %>
      <tr>
        <td><%= pet_info.userId %></td>
        <td><%= pet_info.name %></td>
        <td><%= pet_info.species %></td>
        <td><%= pet_info.breed %></td>
        <td><%= pet_info.gender %></td>
        <td><%= pet_info.birthDate %></td>
        <td><%= pet_info.weight %></td>
        <td><%= link_to 'Show', pet_info %></td>
        <td><%= link_to 'Edit', edit_pet_info_path(pet_info) %></td>
        <td><%= link_to 'Destroy', pet_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

